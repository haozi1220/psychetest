.container {
  background: #f6f6f6;
  height: 100%;
  padding: 40rpx 0;
}
swiper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.swiper_item_wrap {
  position: relative;
  background: #fff;
  width: 95%;
  height: 70%;
  margin: 50rpx auto 0;
  padding: 10rpx 20rpx 0;
  box-sizing: border-box;
  box-shadow: 0 20rpx 40rpx #efefef;
  border-radius: 10rpx;
  transition: .6s;
}
.currentClass {
  height: 80% !important;
  margin-top: 10rpx;
}
.question_title {
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.radio {
  display: block;
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
}
.radio radio {
  text-indent: 20rpx;
}
.btn_wrap {
  position: absolute;
  bottom: 40rpx;
  width: 95%;
  left: 50%;
  transform: translateX(-50%);
}
.btn_group {
  display: flex;
  justify-content: space-between;
}
.btn_double {
  width: 260rpx;
}
.bottom_cout {
  position: absolute;
  bottom: 120rpx;
  font-size: 56rpx;
  width: 100%;
  text-align: center;
}
.bottom_cout .total_cont {
  color: #b8b4b4;
}
